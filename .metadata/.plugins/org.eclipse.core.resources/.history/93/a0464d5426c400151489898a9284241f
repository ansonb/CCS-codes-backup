#include <msp430.h> 
#include <stdlib.h>
#include "SDCard.h"
/*
 * main.c
 */
int main(void) {
    WDTCTL = WDTPW | WDTHOLD;	// Stop watchdog timer
	
    FRESULT rc;
    // File system object
    FATFS fatfs;
    // File object
    FIL fil;
    UINT br;

    f_mount(0, &fatfs);

    // Open file
    rc = f_open(&fil, "Xyz.txt", FA_READ);

    if (rc)
    {
        die(rc);
    }

    //Read from file
    char *rBuffer = (char *)malloc(29*sizeof(char));
    rc = f_read(&fil, rBuffer, 29, &br);
    if (rc)
    {
        die(rc);
    }

    // Close the file
    rc = f_close(&fil);
    if (rc)
    {
        die(rc);
    }


    //WriteFile("Xyz.txt", "Hello from MSP430F5529", 22);
/*
    // Result code
        FRESULT rc;
        // File system object
        FATFS fatfs;
        // File object
        FIL fil;
        UINT bw;

        // Register volume work area (never fails)
        f_mount(0, &fatfs);

        // Open file
        rc = f_open(&fil, "Xyz.txt", FA_WRITE|FA_OPEN_ALWAYS);
        if (rc)
        {
            die(rc);
        }

        // Write to file
        rc = f_write(&fil, "This is MSP430F5529 speaking", 28, &bw);
        if (rc)
        {
            die(rc);
        }

        // Close the file
        rc = f_close(&fil);
        if (rc)
        {
            die(rc);
        }*/

	P1DIR |= 0x01;
    P1OUT |= 0x01;
    return 0;
}
